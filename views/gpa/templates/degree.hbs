<div class="row module-edit" style="display:none">
    <div class="col-md-4 col-xs-12">
        <div class="form-horizontal">
            <div class="row div-error">
                <div class="col-sm-offset-3 col-sm-9 alert alert-danger">
                    Please select a course.
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Course:</label>
                <div class="col-sm-9">
                    <select data-placeholder="Choose a Course..." class="chosen-select form-control select-course"
                            tabindex="2">
                        <!--<option value="">Choose a Course...</option>-->
                        {{#each courses.course}}
                            <option {{#if hide}}style="display:none"{{/if}}
                                    value="{{id}}">{{id}} - {{name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Credit:</label>
                <div class="col-sm-9">
                    <div class="form-control text-credit"></div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Grade:</label>
                <div class="col-sm-9">
                    <select data-placeholder="Leave empty if unknown" class="chosen-select form-control select-grade"
                            tabindex="2">
                        {{#each letter}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                        <option value="unknown">unknown</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <div class="row text-center">
                        <div class="col-xs-6">
                            <button class=" btn btn-sm btn-primary m-t-n-xs btn-add">Add/Edit</button>
                        </div>
                        <div class="col-xs-6">
                            <button class="btn btn-sm btn-primary m-t-n-xs btn-submit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8 col-xs-12 table-add">
        <table class="table ">
            <thead>
            <tr>
                <th>Course</th>
                <th>Name</th>
                <th>Credit</th>
                <th>Grade</th>
                <th></th>
            </tr>
            <thead>
            <tbody class="tbody-add">

            </tbody>
        </table>

    </div>

</div>

<table class="table">
    {{#each data}}
        <thead>
        <tr>
            <th></th>
            <th colspan="3">
                {{#if title}}
                    {{title}}
                    ({{credit_display}}/{{credit}} credits{{#if credit_shift}}, {{credit_shift}} shifted from
                    above{{/if}})
                {{/if}}
            </th>
            <th align="right">GPA:{{gpa}}</th>
        </tr>
        <tr>
            <th></th>
            <th>Course</th>
            <th>Name</th>
            <th>Credit</th>
            <th>Grade</th>
        </tr>
        </thead>

        <tbody class="tbody-main">
        {{#each course_list}}
            <tr type="course">
                <td><i class="fa fa-minus" style="display:none"></i></td>
                <td type="id">{{#with id}}{{this}}{{/with}}</td>
                <td>{{#with name}}{{this}}{{/with}}</td>
                <td>{{#with credit}}{{this}}{{/with}}</td>
                <td>{{#with grade}}{{this}}{{/with}}</td>
            </tr>
        {{/each}}
        <tr>
            <td colspan="5"></td>
        </tr>
        </tbody>
    {{/each}}
</table>

