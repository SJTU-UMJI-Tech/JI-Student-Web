<input type="text" class="form-control input-sm m-b-xs" id="filter"
       placeholder="Search in table">

<table class="footable table table-stripped" data-page-size="15" data-filter=#filter>
    <thead>
    <tr>
        <th>No.</th>
        <th>Name</th>
        <th data-hide="phone,tablet">Core GPA</th>
        <th data-hide="phone,tablet">Core Credits</th>
        <th data-hide="phone,tablet">Total GPA</th>
        <th data-hide="phone,tablet">Total Credits</th>
    </tr>
    </thead>
    <tbody>
    {{#each rows}}
        <tr>
            <td>{{#with No}}{{this}}{{/with}}</td>
            <td>{{#with USER_NAME}}{{this}}{{/with}}</td>
            <td class="center">{{#with core_gpa}}{{this}}{{/with}}</td>
            <td class="center">{{#with core_credit}}{{this}}{{/with}}</td>
            <td class="center">{{#with total_gpa}}{{this}}{{/with}}</td>
            <td class="center">{{#with total_credit}}{{this}}{{/with}}</td>
        </tr>
    {{/each}}
    </tbody>
    <tfoot>
    <tr>
        <td colspan="6">
            <ul class="pagination pull-right"></ul>
        </td>
    </tr>
    </tfoot>
</table>

