<style>
    label {
        font-weight: 700;
    }
</style>
<form method="post" class="form-horizontal" action="{{url}}">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label"><span class="float-right">Building</span></label>
        <div class="col-sm-6">
            <select title="building" class="form-control m-b" name="building">
                {{#each building}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label"><span class="float-right">Floor</span></label>
        <div class="col-sm-6">
            <select title="floor" class="form-control m-b" name="floor">
                {{#each floor}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label"><span class="float-right">Room</span></label>
        <div class="col-sm-6">
            <select title="room" class="form-control m-b" name="room">
                {{#each room}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group">
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save changes</button>
        </div>
    </div>
</form>
